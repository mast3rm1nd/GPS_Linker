<Window x:Class="GPS_Linker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GPS Linker" Height="114" Width="504" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Photo with GPS metadata:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OpenImage_Button" Content="..." HorizontalAlignment="Left" Margin="163,13,0,0" VerticalAlignment="Top" Width="44" Click="OpenImage_Button_Click"/>
        <Label Content="Google Maps:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="GoogleEarth_TextBox" HorizontalAlignment="Left" Height="23" Margin="97,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" IsReadOnly="True" MaxLines="1"/>
        <Label x:Name="PhotoFilename_Label" Content="" HorizontalAlignment="Left" Margin="212,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
